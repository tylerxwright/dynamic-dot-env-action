{
  "compileOnSave": true,
  "compilerOptions": {
    "allowJs": false,
    "declaration": false,
    "target": "es6",
    "module": "ES6",
    "moduleResolution": "Node",
    "lib":[
      "ES2015",
      "ES2016",
      "ES2017",
      "ES2018",
      "ES2019"
    ],
    "rootDir": "./src",
    "outDir": "./lib",
    "sourceMap": true,
    "strict": true,
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "typeRoots": ["./node_modules/@types", "./.types"]
  },
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}