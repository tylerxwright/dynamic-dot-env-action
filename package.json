    "@actions/github": "^4.0.0",
    "dotenv": "^8.2.0"
  },
  "devDependencies": {
    "@types/jest": "^26.0.22",
    "@types/node": "^14.14.35",
    "@vercel/ncc": "^0.27.0",
    "jest": "^26.6.3",
    "jest-circus": "^26.6.3",
