{
  "name": "dynamic-dot-env-action",
  "version": "1.0.0",
  "description": "Build a .env file from Github secrets and from a file.",
  "main": "lib/index.js",
  "scripts": {
    "build": "tsc",
    "start": "tsc && ncc build --source-map --license licenses.txt && act",
    "package": "ncc build --source-map --license licenses.txt",
    "local": "node --loader ts-node/esm ./src/app.ts",
    "test": "npx jest --runInBand --detectOpenHandles --colors --verbose --reporters=default"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tylerxwright/dynamic-dot-env-action.git"
  },
  "keywords": [
    ".env",
    "actions"
  ],
  "author": "Tyler Wright",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/tylerxwright/dynamic-dot-env-action/issues"
  },
  "homepage": "https://github.com/tylerxwright/dynamic-dot-env-action#readme",
  "dependencies": {
    "@actions/artifact": "^0.5.1",
    "@actions/core": "^1.2.6",
    "@actions/exec": "^1.0.4",
    "@actions/github": "^4.0.0",
    "@actions/io": "^1.1.0",
    "tweetsodium": "^0.0.5"
  },
  "devDependencies": {
    "@types/jest": "^26.0.22",
    "@types/node": "^14.14.41",
    "@vercel/ncc": "^0.27.0",
    "jest": "^26.6.3",
    "jest-circus": "^26.6.3",
    "ncc": "^0.3.6",
    "ts-jest": "^26.5.4",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.3"
  }
}
